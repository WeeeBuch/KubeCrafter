<Application x:Class="KubeCrafter.WinApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KubeCrafter.WinApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Dark.xaml"/>

                <ResourceDictionary Source="/Styles/ThemeToggleButton.xaml"/>
                <ResourceDictionary Source="/Styles/BasicButton.xaml"/>
                <ResourceDictionary Source="/Styles/BasicTextBlock.xaml"/>
                <ResourceDictionary Source="/Styles/BasicBorder.xaml"/>
                <ResourceDictionary Source="/Styles/IconButton.xaml"/>
                <ResourceDictionary Source="/Styles/BasicTextBox.xaml"/>
                <ResourceDictionary Source="/Styles/BasicComboBox.xaml"/>
                
                <ResourceDictionary Source="Templates/TextTemplate.xaml"/>
                <ResourceDictionary Source="Templates/NumberTemplate.xaml"/>
                <ResourceDictionary Source="Templates/ListTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
