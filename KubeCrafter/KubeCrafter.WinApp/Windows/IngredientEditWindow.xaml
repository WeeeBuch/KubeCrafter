<Window x:Class="KubeCrafter.WinApp.Windows.IngredientEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KubeCrafter.WinApp.Windows"
        xmlns:templates="clr-namespace:KubeCrafter.WinApp.Templates"
        mc:Ignorable="d" Background="{DynamicResource Background}"
        Title="IngredientEditWindow" Height="450" Width="400"
        WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Edit Ingredient"
                   Style="{StaticResource BasicTextBlock}" FontWeight="Bold" Margin="10" FontSize="30"/>
    
        <!--#region Name and Mod-->
        <TextBlock Text="Mod:" Grid.Column="0" Grid.Row="1" Style="{StaticResource BasicTextBlock}" 
                    VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25"/>

        <TextBlock Text="Name:" Grid.Column="0" Grid.Row="2" Style="{StaticResource BasicTextBlock}"
                    VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25"/>

        <templates:DefaultTextBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"
                                    Margin="10" x:Name="ModTextBox"/>

        <templates:DefaultTextBox Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"
                                    Margin="10" x:Name="NameTextBox"/>
        <!--#endregion-->
    
        <!--#region Type-->
        <TextBlock Text="Type:" Style="{StaticResource BasicTextBlock}" Grid.Column="0" Grid.Row="3"
                    VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25"/>

        <ComboBox ItemsSource="{Binding ItemsList}" Grid.Row="3"
                    SelectedItem="{Binding SelectedItem}"
                    Style="{StaticResource BasicComboBox}" VerticalAlignment="Center"
                    Grid.Column="1" Margin="10"/>
        <!--#endregion-->
        
        <!--#region Count-->
        <TextBlock Text="Count:" Style="{StaticResource BasicTextBlock}" FontSize="25" HorizontalAlignment="Center"
                   Grid.Row="4" Grid.Column="0" x:Name="CountText"/>

        <templates:DefaultNumberUpAndDown x:Name="CountUpDown" Grid.Column="1" Grid.Row="4"
                                          Margin="10" VerticalAlignment="Center" HorizontalContentAlignment="Left"/>
        <!--#endregion-->
        
        <!--#region Buttons-->
        <Border Grid.Row="5" Grid.ColumnSpan="2" Margin="10" Padding="10" VerticalAlignment="Bottom"
                Background="{DynamicResource Background}" CornerRadius="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" Style="{StaticResource BasicButton}" Margin="5" x:Name="SaveBtn"
                        Click="SaveBtn_Click" Width="100"/>
                <Button Content="Cancel" Style="{StaticResource BasicButton}" Margin="5" x:Name="CancelBtn"
                        Click="CancelBtn_Click" Width="100"/>
            </StackPanel>
        </Border>   
        <!--#endregion-->
    </Grid>
</Window>
