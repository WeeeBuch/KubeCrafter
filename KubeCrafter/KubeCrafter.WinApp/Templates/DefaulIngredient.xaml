<UserControl x:Class="KubeCrafter.WinApp.Templates.DefaulIngredient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KubeCrafter.WinApp.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" 
                   Text="{Binding Name}" 
                   Style="{StaticResource BasicTextBlock}" 
                   Margin="0,0,5,0" 
                   VerticalAlignment="Center"/>

        <Button Grid.Column="1" Click="Button_Click"
                Style="{StaticResource BasicButton}" 
                Margin="1" Content="Edit" HorizontalAlignment="Right"
                VerticalAlignment="Center"/> 

    </Grid>
</UserControl>
