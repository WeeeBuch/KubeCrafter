<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              x:Key="SubDataTemplate">
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="10">
            <StackPanel>
                <TextBlock Text="Title:" FontWeight="Bold"/>
                <TextBox Text="{Binding Title, Mode=OneWay}"
                     TextChanged="TitleTextChanged"/>

                <TextBlock Text="Description:" FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBox Text="{Binding Description, Mode=OneWay}"
                     TextChanged="DescriptionTextChanged"/>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>