<UserControl x:Class="KubeCrafter.WinApp.Templates.TextSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KubeCrafter.WinApp.Templates"
             mc:Ignorable="d" MinWidth="0" MinHeight="0"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Top"
             HorizontalContentAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             d:DesignHeight="200" d:DesignWidth="260">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Label}" Style="{StaticResource BasicTextBlock}"/>
            <local:DefaultTextBox x:Name="TextBox"/>
        </StackPanel>
    </Grid>
</UserControl>
