<UserControl x:Class="KubeCrafter.WinApp.Templates.DefaultNumberUpAndDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KubeCrafter.WinApp.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <StackPanel
            Orientation="Horizontal" HorizontalAlignment="Center" 
            VerticalAlignment="Center">
            <Button Content="-" Click="Decrement_Click" Style="{StaticResource BasicButton}" Height="36" Width="36"/>
            <Border Margin="2,0" Style="{StaticResource BasicBorder}">
                <TextBlock Width="50" x:Name="NumberBox"
             Text="{Binding NumberValue}" Style="{StaticResource BasicTextBlock}"/>
            </Border>

            <Button Content="+" Click="Increment_Click"  Style="{StaticResource BasicButton}"  Height="36" Width="36"/>
        </StackPanel>
    </Grid>
</UserControl>
