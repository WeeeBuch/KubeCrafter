<Window x:Class="KubeCrafter.WinApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KubeCrafter.WinApp"
        mc:Ignorable="d" Background="{DynamicResource Background}"
        Title="KubeCrafter" Height="450" Width="800"
        WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--#region Top Bar-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="2">
            <Button Width="40" Height="40" x:Name="btnMinimize" Click="btnMinimize_Click"
                    Style="{StaticResource BasicButton}">_</Button>
            <Button Width="40" Height="40" x:Name="btnMaximize" Click="btnMaximize_Click"
                    Style="{StaticResource BasicButton}">🗖</Button>
            <Button Width="40" Height="40" x:Name="btnClose" Click="btnClose_Click"
                    Style="{StaticResource BasicButton}">X</Button>
        </StackPanel>

        <TextBlock Foreground="{DynamicResource Foreground}">
            <TextBlock.Text>KubeCrafter</TextBlock.Text>
            <TextBlock.FontSize>20</TextBlock.FontSize>
            <TextBlock.VerticalAlignment>Center</TextBlock.VerticalAlignment>
            <TextBlock.HorizontalAlignment>Left</TextBlock.HorizontalAlignment>
            <TextBlock.Margin>10 0 0 0</TextBlock.Margin>
        </TextBlock>

        <ToggleButton x:Name="ThemeToggleButton" Grid.Column="1" Grid.Row="0"
                      Style="{StaticResource ThemeToggleButtonStyle}"
                      IsChecked="True" HorizontalAlignment="Left"
                      Checked="ThemeToggleButton_Checked"
                      Unchecked="ThemeToggleButton_Unchecked" 
                      BorderThickness="0,0,0,0"/>
        <!--#endregion-->

        <!--#region Main content -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <!--#region Definitions-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--#endregion-->
            
            <!--#region First column-->
            <Grid Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- TextBlock -->
                    <RowDefinition Height="*"/>
                    <!-- Border vyplní zbytek -->
                </Grid.RowDefinitions>

                <TextBlock Text="Input" Style="{StaticResource BasicTextBlock}" Grid.Row="0"/>

                <Border Style="{StaticResource BasicBorder}" Grid.Row="1" Margin="1">
                    <TextBlock Text="Here will be an input textbox for converting Json into KubeJS and for dropping files." 
                   Style="{StaticResource BasicTextBlock}"/>
                </Border>
            </Grid>
            <!--#endregion-->
            
            <!--#region Second column-->
            <Grid Grid.Column="1" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Properties" Style="{StaticResource BasicTextBlock}"/>
 
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                    <ItemsControl x:Name="ItemsList" 
                      ItemTemplate="none"/>
                </ScrollViewer>

            </Grid>
            <!--#endregion-->
            
            <!--#region Third column-->
                <!--#region Top-->
            
                <!--#endregion-->
            
                <!--#region Bottom-->
            
                <!--#endregion-->
            <!--#endregion-->
            
        </Grid>
        <!--#endregion-->
        
    </Grid>
</Window>
